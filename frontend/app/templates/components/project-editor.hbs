<form id="project-editor">
  <fieldset>
    <legend>Project Info</legend>

    <div class="form-group">
      <label for="name">Project name:</label>
      {{input value=project.name id='name' class='form-control' maxlength=120}}
    </div>

    <div class="form-group">
      <label for="description">Project description:</label>
      {{textarea value=project.description id='description' class='form-control'}}
    </div>
  </fieldset>

  <fieldset>
    <legend>Attachments</legend>

    {{project-attachments-editor project=project attachments=project.attachments}}
  </fieldset>

  <fieldset>
    <button {{action 'back'}} class="btn btn-default">Back</button>
    {{#if project.id}}
      <button {{action 'cancel'}} class="btn btn-default">Revert changes</button>
      <button {{action 'destroy'}} class="btn btn-danger">Destroy project</button>
    {{/if}}
    <button {{action 'save'}} type="submit" class="btn btn-success">Save project</button>
  </fieldset>
</form>

{{notify-alert notify=notify visible=showAlertNotify}}