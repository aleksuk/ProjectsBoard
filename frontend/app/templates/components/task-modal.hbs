{{#bs-modal open=showModal body=false footer=false header=false}}
  {{#bs-modal-header}}
    <h4 class="modal-title">
      {{#if task.id}}
        Update task
      {{else}}
        Add new task
      {{/if}}
    </h4>
  {{/bs-modal-header}}

  {{#bs-modal-body}}
    {{#bs-form action=(action 'onSuccess') model=task}}
      {{bs-form-element controlType='text' label='Task title' property='body'}}
    {{/bs-form}}
  {{/bs-modal-body}}

  {{#bs-modal-footer as |footer|}}
    {{#if task.id}}
      {{#bs-button action=(action 'onDanger') type='danger'}}Destroy{{/bs-button}}
    {{/if}}
    {{#bs-button action=(action 'onClose') type='default'}}Cancel{{/bs-button}}
    {{#bs-button buttonType='submit' type='success'}}Save{{/bs-button}}
  {{/bs-modal-footer}}
{{/bs-modal}}

{{yield}}
